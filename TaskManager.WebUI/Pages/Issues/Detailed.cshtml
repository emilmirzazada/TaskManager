@page
@model TaskManager.WebUI.Issues.DetailedModel
@{
    ViewData["Title"] = "Issue details";
}

<div class="breadcrumbs">
    <a asp-page="../Index">Home</a> >
    <a asp-page="Index">Issues</a> >
    <span>Issue details</span>
</div>

<h1>Issue# @Model.Issue.IssueId</h1>

<div>Issue details</div>

<table class="table">
    <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Priority</th>
        <th>Status</th>
        <th>Assignee</th>
        <th>Reporter</th>
    </tr>
    <tr>
        <td>@Model.Issue.Name</td>
        <td>@Model.Issue.Description</td>
        <td>@Model.Issue.Priority</td>
        <td>@Model.Issue.Status</td>
        <td>
            @foreach (var item in Model.Issue.IssueAssignees)
            {
                @(item.Assignee.ShortName +" ")
            }
            </td>
        <td>@Model.Issue.Reporter.FullName</td>
    </tr>
</table>

<a class="btn task-add noselect" asp-page="Edit" asp-route-id="@Model.Issue.IssueId">Edit</a>